<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stocks.dao.datas.TBuyDataDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="stocks.entity.datas.TBuyData" >
	<result column="id" property="id"/>
	<result column="gcode" property="gcode"/>
	<result column="gname" property="gname"/>
	<result column="securitycompany" property="securitycompany"/>
	<result column="account" property="account"/>
	<result column="num" property="num"/>
	<result column="totalmoney" property="totalmoney"/>
	<result column="sellmoney" property="sellmoney"/>
	<result column="gainmoney" property="gainmoney"/>
	<result column="buydate" property="buydate"/>
	<result column="enddate" property="enddate"/>
	<result column="state" property="state"/>
	<result column="gtype" property="gtype"/>
</resultMap>
       
<!-- t_buy_data table all fields -->
<sql id="Base_Column_List" >
	 id,gcode,gname,securitycompany,account,num,totalmoney,sellmoney,gainmoney,buydate,gtype,enddate,state
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null and id != ''" >
	    and id =  #{id}
	</if>
	<if test="gcode != null and gcode != ''" >
		and gcode like CONCAT('%',#{gcode},'%')
	</if>
	<if test="gname != null and gname != ''" >
		and gname like CONCAT('%',#{gname},'%')
	</if>
	<if test="securitycompany != null and securitycompany != ''" >
	    and securitycompany =  #{securitycompany}
	</if>
	<if test="account != null and account != ''" >
	    and account =  #{account}
	</if>
	<if test="num != null and num != ''" >
	    and num =  #{num}
	</if>
	<if test="totalmoney != null and totalmoney != ''" >
	    and totalmoney =  #{totalmoney}
	</if>
	<if test="sellmoney != null and sellmoney != ''" >
	    and sellmoney =  #{sellmoney}
	</if>
	<if test="gainmoney != null and gainmoney != ''" >
	    and gainmoney =  #{gainmoney}
	</if>
	<if test="buyyear != null and buyyear != ''" >
	    and year(buydate) = #{buyyear}
	</if>
	<if test="buymonth != null and buymonth != ''" >
	    and month(buydate) = #{buymonth}
	</if>
	<if test="enddate != null and enddate != ''" >
	    and enddate =  #{enddate}
	</if>
	<if test="state != null and state != ''" >
	    and state =  #{state}
	</if>
	<if test="gtype != null and gtype != ''" >
	    and gtype =  #{gtype}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey>
  insert into t_buy_data(id,gcode,gname,securitycompany,account,num,totalmoney,sellmoney,gainmoney,buydate,enddate,state,gtype)
 values(#{id},#{gcode},#{gname},#{securitycompany},#{account},#{num},#{totalmoney},#{sellmoney},#{gainmoney},#{buydate},#{enddate},#{state},#{gtype})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="Object" >
  update t_buy_data set gcode=#{gcode},gname=#{gname},securitycompany=#{securitycompany},account=#{account},num=#{num},totalmoney=#{totalmoney},sellmoney=#{sellmoney},gainmoney=#{gainmoney},buydate=#{buydate},enddate=#{enddate},state=#{state},gtype=#{gtype} where id=#{id}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="Object" >
	update t_buy_data set 
	<trim  suffixOverrides="," >
	<if test="gcode != null  ">
		gcode=#{gcode},
	</if>
	<if test="gname != null  ">
		gname=#{gname},
	</if>
	<if test="securitycompany != null  ">
		securitycompany=#{securitycompany},
	</if>
	<if test="account != null  ">
		account=#{account},
	</if>
	<if test="num != null  ">
		num=#{num},
	</if>
	<if test="totalmoney != null  ">
		totalmoney=#{totalmoney},
	</if>
	<if test="sellmoney != null  ">
		sellmoney=#{totalmoney},
	</if>
	<if test="gainmoney != null  ">
		gainmoney=#{gainmoney},
	</if>
	<if test="buydate != null  ">
		buydate=#{buydate},
	</if>
	<if test="enddate != null  ">
		enddate=#{enddate},
	</if>
	<if test="state != null  ">
		state=#{state},
	</if>
	<if test="gtype != null  ">
		gtype=#{gtype},
	</if>
	</trim> where id=#{id}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete 	 from t_buy_data where id = #{id}
</delete>
 
<!-- 根据id查询 购买数据 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from t_buy_data where id = #{id}
</select>

<!-- 购买数据 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from t_buy_data 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询购买数据列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from t_buy_data 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>


<!-- 购买数据 列表总数-->
<select id="queryByCountSearch" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from (select gcode from t_buy_data 
	<include refid="Example_Where_Clause"/>
	<if test="groups != null and groups != ''" >
	    group by gcode
	</if>
     ) a
</select>
  	
<!-- 查询购买数据列表,合计查询：一个查全部，一个按gcode查 -->
<select id="queryByListSearch" resultMap="BaseResultMap"  parameterType="Object">
	<choose>
	<when test="groups != null and groups != ''">
	select a.gcode,a.gname,a.securitycompany,b.num,b.totalmoney,b.gainmoney,a.gtype from t_buy_data a left join (select gcode,sum(num) num,count(gcode) totalmoney,sum(gainmoney) gainmoney from t_buy_data 
	<include refid="Example_Where_Clause"/>
	<if test="groups != null and groups != ''" >
	    group by gcode
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
    ) b on a.gcode = b.gcode
	</when>
	<otherwise>
	select sum(num) num,count(gcode) totalmoney,sum(gainmoney) gainmoney from t_buy_data 
	<include refid="Example_Where_Clause"/>
	<if test="groups != null and groups != ''" >
	    group by gcode
	</if>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
	</otherwise>
	</choose>
</select>
  	
</mapper>   
