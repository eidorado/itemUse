<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:task="http://www.springframework.org/schema/task" 
    xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd" default-lazy-init="false">

	 <task:scheduled-tasks> 
	 	<!-- 每天中午11:35(0 40 15 ? * MON-FRI)保存3个大盘指数 -->
        <task:scheduled ref="timeJob" method="addMidDayBigdata" cron="0 35 11 ? * MON-FRI"/> 
	 	<!-- 每天中午11:40(0 50 15 ? * MON-FRI)保存3000股日K,一般12:10有全数据 -->
        <task:scheduled ref="timeJob" method="addMidDayData" cron="0 40 11 ? * MON-FRI"/> 
	 	<!-- 每天下午3:30(0 40 15 ? * MON-FRI),删除中午数据并保存3个大盘指数 -->
        <task:scheduled ref="timeJob" method="addDayBigdata" cron="0 40 15 ? * MON-FRI"/> 
	 	<!-- 每天下午3:50(0 50 15 ? * MON-FRI),删除中午数据并保存3000股日K,一般16:00有全数据 -->
        <task:scheduled ref="timeJob" method="addDayData" cron="0 50 15 ? * MON-FRI"/> 
	</task:scheduled-tasks>

	<context:component-scan base-package="stocks.job" />
	
	
</beans>