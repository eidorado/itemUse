	</if>
	<if test="lyr != null and lyr != ''" >
	    and lyr =  #{lyr}
	</if>
	<if test="ttm != null and ttm != ''" >
	    and ttm =  #{ttm}
	</if>
	<if test="bpid != null and bpid != ''" >
