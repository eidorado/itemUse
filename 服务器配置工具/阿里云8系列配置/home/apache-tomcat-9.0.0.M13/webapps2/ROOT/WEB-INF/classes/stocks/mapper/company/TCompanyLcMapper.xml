<!-- 查询所有 -->
<select id="queryAll" resultMap="BaseResultMap">
	select 
	<include refid="Base_Column_List"/>
	from t_company_lc 
</select>
  	
<!-- 查询所有 -->
<select id="queryAllByState" resultMap="BaseResultMap" parameterType="java.lang.Integer">
	select 
	<include refid="Base_Column_List"/>
	from t_company_lc where 1=1
	<choose>
		<when test="state != null and state != ''">
			<if test="state == 1">
				and state = 1
			</if>
			<if test="state == 2">
				and state = 2
			</if>
			<if test="state == 3">
				and state = 3
			</if>
			<if test="state == 12">
				and ( state = 1 or state = 2 )
			</if>
			<if test="state == 23">
				and ( state = 2 or state = 3 )
			</if>
			<if test="state == 123">
				and ( state = 1 or state = 2 or state = 3 )
			</if>
		</when>
		<otherwise>
			and state = null
		</otherwise>
	</choose>
	order by state asc
</select>
  	
